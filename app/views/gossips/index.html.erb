<html>
  <head>
    <title>Liste des potins</title>
    <!-- Lien vers la feuille de style 'index.css' pour styliser cette page -->
    <%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body data-turbo="false">
    <!-- Affiche le contenu fourni par la vue spécifique associée à cette mise en page -->
    <%= yield %> 

    <header>
      <!-- Zone de header, actuellement vide, où tu pourrais ajouter du contenu spécifique (ex: logo, navigation) -->
    </header>

    <!-- Titre principal pour afficher la liste des gossips -->
    <h2>Liste des Gossips</h2>

    <!-- Boucle pour afficher chaque gossip de @gossips -->
    <% @gossips.each do |gossip| %>
      <div class="gossiphome">
        <div class="headergossip">
          <div class="imgusertext">
            <!-- Image anonyme pour chaque gossip -->
            <%= image_tag "anonyme.png", class: "imguser", alt: "Image Anonyme" %>
            <!-- Affiche le prénom de l'utilisateur qui a créé le gossip -->
            <p class="infogossip"><%= gossip.user.first_name %></p>
          </div>
          <!-- Affiche l'ID du gossip (utilisé comme identifiant unique) -->
          <p>#<%= gossip.id %> </p>
        </div>
        
        <!-- Contenu du gossip -->
        <p class="textgossip"><%= gossip.content %></p>

        <!-- Conteneur flex pour aligner les boutons en bas à droite, avec un padding pour les décoller légèrement de la bordure -->
        <div class="button-group" style="display: flex; justify-content: flex-end; margin-top: 10px; padding-right: 10px;">

          <!-- Bouton pour voir les détails du gossip (redirige vers l'URL initial de la page home) -->
          <%= link_to "Voir", "/static_gossip/gossip/#{gossip.id}", class: "view-button" %>
        </div>
      </div>
    <% end %>
  </body>
</html>
